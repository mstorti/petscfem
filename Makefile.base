ANN_CPPFLAGS = -DUSE_ANN -I$(ANN_INC_DIR)
ANN_LDFLAGS  = $(ANN_LIB_DIR)/lib$(ANN_LIBNAME).a
#ANN_LDFLAGS  = -L$(ANN_LIB_DIR) -l$(ANN_LIBNAME)
