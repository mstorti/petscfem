general_clean: 
#	cat /dev/null >makefile.d
	$(MAKE) clean

local_clean::
	-@rm -f *~ *.o $(OBJS) $(PROG_BIN)			\
		octave-core *.cppi				\
		outvector.sal *.sal *.out TAGS makefile.d	\
		leak.out.* &> /dev/null				\
		*.efn *.a *.bin *.gpl \"\"
	for link in * ; do if [ -L $$link ] ; then rm $$link ; fi ; done

local_dist_clean::

