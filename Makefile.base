## SSL
ifneq ($(SSL),)
SSL_CPPFLAGS =  -DUSE_SSL -I$(SSL_INC_DIR)
SSL_LDFLAGS  = $(SSL_LIB_DIR)/lib$(SSL_LIBNAME).a
#SSL_LDFLAGS  = -L$(SSL_LIB_DIR) -lib$(SSL_LIBNAME)
