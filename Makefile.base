## SUPERLU
ifneq ($(SUPERLU),)
SUPERLU_CPPFLAGS =  -DUSE_SUPERLU -I$(SUPERLU_INC_DIR)
SUPERLU_LDFLAGS  = $(SUPERLU_LIB_DIR)/lib$(SUPERLU_LIBNAME).a
#SUPERLU_LDFLAGS  = -L$(SUPERLU_LIB_DIR) -lib$(SUPERLU_LIBNAME)
